<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-create-owners-table" author="gemini">
        <createTable tableName="owners">
            <column name="owner_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="mailing_address" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-create-tenants-table" author="gemini">
        <createTable tableName="tenants">
            <column name="tenant_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3-create-agents-table" author="gemini">
        <createTable tableName="agents">
            <column name="agent_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="hire_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4-create-properties-table" author="gemini">
        <createTable tableName="properties">
            <column name="property_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_id" type="BIGINT"/>
            <column name="address_line1" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address_line2" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="state_province" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="property_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
            <column name="size_sqft" type="NUMERIC(10, 2)"/>
            <column name="num_bedrooms" type="INT"/>
            <column name="num_bathrooms" type="INT"/>
            <column name="year_built" type="INT"/>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="properties" baseColumnNames="owner_id"
                                 constraintName="fk_properties_owner"
                                 referencedTableName="owners" referencedColumnNames="owner_id"
                                 onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="5-create-leases-table" author="gemini">
        <createTable tableName="leases">
            <column name="lease_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_rent" type="NUMERIC(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="security_deposit" type="NUMERIC(10, 2)"/>
            <column name="status" type="VARCHAR(50)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="lease_document_url" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="leases" baseColumnNames="property_id"
                                 constraintName="fk_leases_property"
                                 referencedTableName="properties" referencedColumnNames="property_id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="leases" baseColumnNames="tenant_id"
                                 constraintName="fk_leases_tenant"
                                 referencedTableName="tenants" referencedColumnNames="tenant_id"
                                 onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="6-create-payments-table" author="gemini">
        <createTable tableName="payments">
            <column name="payment_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lease_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="VARCHAR(50)"/>
            <column name="notes" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="payments" baseColumnNames="lease_id"
                                 constraintName="fk_payments_lease"
                                 referencedTableName="leases" referencedColumnNames="lease_id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="7-create-maintenance-requests-table" author="gemini">
        <createTable tableName="maintenance_requests">
            <column name="request_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT"/>
            <column name="reported_date" type="DATE" defaultValueComputed="CURRENT_DATE">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="OPEN">
                <constraints nullable="false"/>
            </column>
            <column name="completed_date" type="DATE"/>
            <column name="notes" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="maintenance_requests" baseColumnNames="property_id"
                                 constraintName="fk_maintenance_property"
                                 referencedTableName="properties" referencedColumnNames="property_id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="maintenance_requests" baseColumnNames="tenant_id"
                                 constraintName="fk_maintenance_tenant"
                                 referencedTableName="tenants" referencedColumnNames="tenant_id"
                                 onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="8-create-property-agents-table" author="gemini">
        <createTable tableName="property_agents">
            <column name="property_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="agent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="assignment_date" type="DATE" defaultValueComputed="CURRENT_DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="property_agents" columnNames="property_id, agent_id"/>
        <addForeignKeyConstraint baseTableName="property_agents" baseColumnNames="property_id"
                                 constraintName="fk_propagents_property"
                                 referencedTableName="properties" referencedColumnNames="property_id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="property_agents" baseColumnNames="agent_id"
                                 constraintName="fk_propagents_agent"
                                 referencedTableName="agents" referencedColumnNames="agent_id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>